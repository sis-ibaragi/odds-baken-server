{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "lib": [
            "es2018",
            "dom"
        ],
        "moduleResolution": "node",
        "removeComments": true,
        "strict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "strictFunctionTypes": false
    },
    "include": [
        "./src/**/*"
    ]
}